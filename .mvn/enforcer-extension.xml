<extension>
    <executions>
        <execution>
            <id>maven-enforcer-extension</id>
            <phase>validate</phase>
            <configuration>
                <!-- https://maven.apache.org/enforcer/enforcer-rules/index.html -->
                <rules>
                    <requireJavaVersion>
                        <version>[25.0.1,26.0.0)</version>
                    </requireJavaVersion>
                    <requireMavenVersion>
                        <version>[3.9.11,4.0)</version>
                    </requireMavenVersion>
                    <!--
                    <requirePluginVersions>
                        <banSnapshots>false</banSnapshots>
                    </requirePluginVersions>
                    -->
                    <banDuplicatePomDependencyVersions/>
                </rules>
            </configuration>
        </execution>
    </executions>
</extension>
