@startuml Komponenten

package com.acme.jobconnect #DDDDDD {
    package rest <<boundary>> #FFFFFF {
        [@RestController\nJobOfferController] as JobOfferController
        [@Controller\nJobOfferWriteController] as JobOfferWriteController
    }

    package service <<control>> #FFFFFF {
        [@Service\nJobOfferService] as JobOfferService
        [@Service\nJobOfferWriteService] as JobOfferWriteService
    }

    package repository <<control>> #FFFFFF {
        [JobOfferRepository]
    }

    package entity <<entity>> #FFFFFF {
        [JobOffer]
    }
}

cloud {
    [Spring Data]
}

database "joboffer (PostgreSQL)" {
    [Tabelle joboffer]
    [Tabelle application]
    [Tabelle job_description]

    [Tabelle joboffer] -[hidden]-> [Tabelle job_description]
    [Tabelle job_description] -[hidden]-> [Tabelle application]
}

RESTClient ~~> [JobOfferController]
RESTClient ~~> [JobOfferWriteController]

[JobOfferController] --> [JobOfferService]
[JobOfferWriteController] --> [JobOfferWriteService]
[JobOfferService] --> [JobOfferRepository]
[JobOfferWriteService] --> [JobOfferRepository]

[JobOfferController] .left.> [JobOffer]
[JobOfferWriteController] ..> [JobOffer]
[JobOfferService] .left.> [JobOffer]
[JobOfferWriteService] ..> [JobOffer]
[JobOfferRepository] ..> [JobOffer]

[JobOfferRepository] ~right~> [Spring Data]
[Spring Data] ~right~> [Tabelle joboffer]
[Spring Data] ~~> [Tabelle job_description]
[Spring Data] ~~> [Tabelle application]

